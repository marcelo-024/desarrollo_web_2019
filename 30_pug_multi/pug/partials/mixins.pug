mixin itemMenu(item, index)
    li
        if (index == page-1)
            a.activo(href=item.id.toLowerCase()+".html" title=item.description) #{item.nombre}
        else
            a(href=item.id.toLowerCase()+".html" title=item.description) #{item.nombre}
            
mixin inputGroup(inputName)
    .form-group
        label(for=inputName.toLowerCase()) #{inputName}
        block
        p.error(hidden) Aquí irán los errores